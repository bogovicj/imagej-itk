			<artifactId>simpleitk</artifactId>
			<version>${simpleitk.version}</version>
		</dependency>
	
	<!-- Testing scope -->
	
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
 
	<repositories>
		<repository>
			<id>imagej.public</id>
